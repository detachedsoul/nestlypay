datasource db {
  provider = "postgresql"
  url = env("db_PRISMA_URL") // uses connection pooling
  directUrl = env("db_URL_NON_POOLING") // uses a direct connection
}

model Business {
    id           String  @id @default(uuid())
    firstName    String
    lastName     String
    email        String  @unique
    companyName  String  @unique
    companyEmail String  @unique
    address      String
    city         String
    state        String
    postalCode   String
    country      String
    website      String?
    password     String
    sessionID    String  @default(uuid())
}
