generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["omitApi"]
}

datasource db {
    provider  = "postgresql"
    url       = env("db_PRISMA_URL")
    directUrl = env("db_URL_NON_POOLING")
}

model Business {
    id           String   @id @default(uuid())
    firstName    String
    lastName     String
    email        String   @unique
    companyName  String   @unique
    companyEmail String   @unique
    address      String
    city         String
    state        String
    postalCode   String
    country      String
    website      String?
    password     String
    sessionID    String   @default(uuid())
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
}

model User {
    id                     String        @id @default(uuid())
    fullName               String
    email                  String        @unique
    password               String
    sessionID              String        @default(uuid())
    address                String?
    city                   String?
    country                String?
    postalCode             String?
    state                  String?
    bankName               String?
    phoneNumber            String?
    accountNumber          String?
    accountName            String?
    acceptTransfer         Boolean       @default(false)
    acceptCrypto           Boolean       @default(false)
    receiveReceipt         Boolean       @default(false)
    customerReceiveReceipt Boolean       @default(false)
    createdAt              DateTime      @default(now())
    updatedAt              DateTime      @updatedAt
    clients                UserClients[]
}

model UserClients {
    id          String   @id @default(uuid())
    fullName    String
    email       String
    phoneNumber String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    customer    User     @relation(fields: [customerID], references: [id])
    customerID  String
}

model UserTransactions {
    id            String   @id @default(uuid())
    fullName      String
    email         String
    amount        Int
    date          DateTime @default(now())
    status        String
    paymentMethod String
    invoiceID     String
}
