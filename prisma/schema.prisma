model Business {
    id           String  @id @default(uuid())
    firstName    String
    lastName     String
    email        String  @unique
    companyName  String  @unique
    companyEmail String  @unique
    address      String
    city         String
    state        String
    postalCode   String
    country      String
    website      String?
    password     String
    sessionID    String  @default(uuid())
}

model User {
    id                     String  @id @default(uuid())
    fullName               String
    email                  String  @unique
    password               String
    sessionID              String  @default(uuid())
    address                String?
    city                   String?
    country                String?
    postalCode             String?
    state                  String?
    bankName               String?
    accountNumber          String?
    accountName            String?
    acceptTransfer         Boolean @default(false)
    acceptCrypto           Boolean @default(false)
    receiveReceipt         Boolean @default(false)
    customerReceiveReceipt Boolean @default(false)
}
